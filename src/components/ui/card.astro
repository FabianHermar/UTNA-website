---
import { Image } from 'astro:assets'

interface CardProps {
	title: string
	description: string
	image: string
	href: string
	imageClass?: string
	additionalClasses?: string
}

const { title, description, image, href, imageClass, additionalClasses } = Astro.props as CardProps
---

<a href={href} class='group relative block h-full w-full rounded-2xl bg-black'>
	<Image
		alt=`The next illustration show ${title} course`
		src={image}
		class=`${imageClass} absolute rounded-2xl object-cover opacity-80 transition-opacity group-hover:opacity-50`
		width={100}
		height={100}
	/>

	<div class='relative p-4 sm:p-6 lg:p-8'>
		<p class='font-GilroyBold text-xl font-bold text-white drop-shadow-lg md:text-3xl'>{title}</p>

		<div class=`mt-32 sm:mt-48 ${additionalClasses}`>
			<div
				class='translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100'
			>
				<p class='font-GilroyRegular text-sm text-white md:text-base'>
					{description}
				</p>
			</div>

			<div
				class='translate-y-10 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100'
			>
				<p class='mt-4 w-max bg-white px-4 py-1 font-GilroySemibold text-sm text-black'>
					Ver más →
				</p>
			</div>
		</div>
	</div>
</a>
