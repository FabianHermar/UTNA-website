---
import { ViewTransitions } from 'astro:transitions'
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Tecnológia y Valores, Educación sin Límites' />
		<meta name='viewport' content='width=device-width' />
		<link rel='shortcut icon' href='/favicon/favicon.ico' type='image/x-icon' />
		<title>{title}</title>
		<link rel='apple-touch-icon' sizes='180x180' href='/favicon/apple-touch-icon.png' />
		<link rel='icon' type='image/png' sizes='32x32' href='/favicon/favicon-32x32.png' />
		<link rel='icon' type='image/png' sizes='16x16' href='/favicon/favicon-16x16.png' />
		<link rel='manifest' href='/favicon/site.webmanifest' />
		<link rel='mask-icon' href='/favicon/safari-pinned-tab.svg' color='#000000' />
		<link rel='alternate' hreflang='es' href='https://utna.edu.mx/es/' />
		<link rel='alternate' hreflang='en' href='https://utna.edu.mx/en/' />
		<link rel='canonical' href='https://utna.edu.mx' />
		<meta
			name='apple-mobile-web-app-title'
			content='UTNA - Universidad Tecnológica del Norte de Aguascalientes'
		/>
		<meta
			name='application-name'
			content='UTNA - Universidad Tecnológica del Norte de Aguascalientes'
		/>
		<meta name='msapplication-TileColor' content='#000000' />
		<meta name='theme-color' content='#ffffff' />

		<meta property='og:url' content='https://utna.edu.mx' />
		<meta property='og:type' content='website' />
		<meta
			property='og:title'
			content='UTNA - Universidad Tecnológica del Norte de Aguascalientes'
		/>
		<meta property='og:description' content='Tecnológia y Valores, Educación sin Límites' />
		<meta
			property='og:image'
			content='https://res.cloudinary.com/dvjzjasfg/image/upload/v1725076616/portfolio_mockup.webp'
		/>

		<meta name='twitter:card' content='summary_large_image' />
		<meta property='twitter:domain' content='utna.edu.mx' />
		<meta property='twitter:url' content='https://utna.edu.mx' />
		<meta
			name='twitter:title'
			content='UTNA - Universidad Tecnológica del Norte de Aguascalientes'
		/>
		<meta name='twitter:description' content='Tecnológia y Valores, Educación sin Límites' />
		<meta
			name='twitter:image'
			content='https://res.cloudinary.com/dvjzjasfg/image/upload/v1725076616/portfolio_mockup.webp'
		/>
		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>
</html>
